
@{
    ViewBag.Title = "ViewAll";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<h1 class="blue-heading page-header">Universities</h1> 
<div class="col-sm-10">
    <table class="table table-bordered" id="mytable">
        <thead>
            <tr>
                <th>Name</th>
                <th>Alternate</th>
                <th>Sector</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>

           @foreach(var obj in Model)
           {
               <tr>
                   <td>@obj.Name</td>
                   <td>@obj.AlternateName</td>
                   <td>@obj.Sector</td>
                   <td>
                    <input class="btn btn-success" type="submit" value="Details" onclick="self.location='/AdminUniversity/Details/@obj.Id'"/>
                    <input class="btn btn-danger" type="submit" value="Delete" onclick="ConfirmDeletion(@obj.Id)" />
                   </td>
               </tr>
           }
        </tbody>
    </table>
</div>
<script>
    function ConfirmDeletion(a) {
        var check = confirm("Confirm Deletion?(Deleting a university will delete all the campuses, respective degrees and newsfeed)");
        if (check == true) {
            self.location = '/AdminUniversity/Delete/' + a;
        }
    }
</script>